@model Superacion.ViewModels.RegistroUsuarioViewModel
@{
    Layout = null;
}
@* Page Login*@
<!doctype html>
<html lang="en">
@*Cabecera Login*@
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!--Titulo-->
    <title>Sign Up</title>
    <!--CSS-->
    <link href="~/css/Plantilla.css" rel="stylesheet" />
    <!-- font style -->
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Montserrat:ital,wght@1,600;1,800&family=Open+Sans:wght@400;600&family=Oswald:wght@400;500&family=Roboto:wght@400;900&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous" />
    <!--jquery-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script>
        function myFunction() {
            var x = document.getElementById("Clave");

            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }

        }
    </script>

</head>
<body id="login-body">
    <header class="container-fluid" style="background:skyblue">
        <div class="d-flex bd-highlight mb-0">
            <div class="col-lg-5  p-2 bd-highlight"><h1 class="align-items-center">Itla Twitter</h1></div>
            <div class="ml-auto p-3 bd-highlight "><a asp-action="Index" class="align-items-center btn btn-outline-danger" id="btn-atras-registro">Atras</a></div>
        </div>

    </header>

    @*Posicion Centralizada*@
    <div class="text-center row align-items-center justify-content-center vh-100 m-1">
        <div class="row centered-form">
            <div class="col-sm-offset-2 col-md-offset-2 rounded">
                <div class="panel panel-default rounded mr-md-3">
                    <div class="panel-heading rounded-top">
                        <h3 class="panel-title rounded-top aling-middle p-2">Registro</h3>
                    </div>
                    <div class="panel-body" style="padding:7px;">
                        @*Formulario*@
                        <form asp-controller="Principal" asp-action="Signup" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <div class="row col-lg-3">
                                        <label asp-for="Nombre" class="control-label"></label>
                                    </div>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ingresar Nombre" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="row col-lg-3">
                                        <label asp-for="Apellido" class="control-label"></label>
                                    </div>
                                    <input asp-for="Apellido" class="form-control" placeholder="Ingresar Apellido" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row col-lg-8">
                                    <label asp-for="Correo" class="control-label"></label>
                                </div>
                                <input asp-for="Correo" class="form-control" placeholder="Ingresar Correo" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="row col-lg-8">
                                    <label asp-for="Telefono" class="control-label"></label>
                                </div>
                                <input asp-for="Telefono" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" class="form-control" placeholder="Ingresar Telefono" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                                <div class="row col-lg-10 col-lg-pull-1">
                                    <small class="text-info">Formato: 000-000-0000</small>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row col-lg-3">
                                    <label asp-for="Usuario1" class="control-label"></label>
                                </div>
                                <input asp-for="Usuario1" class="form-control" placeholder="Ingresar Usuario" />
                                <div class="row col-lg-8">
                                    <span asp-validation-for="Usuario1" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row col-lg-3">
                                    <label asp-for="Clave" class="control-label"></label>
                                </div>
                                <input asp-for="Clave" class="form-control" id="Clave" placeholder="Ingresar Contraseña" />
                                <div class="row col-lg-8">
                                    <span asp-validation-for="Clave" class="text-danger"></span>
                                    <input type="checkbox" style="margin-top:4px; margin-left:4px;" onclick="myFunction()"><p id="msc"> &nbsp; Mostar Contraseña.</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row col-lg-8" style="margin-top:-12px;">
                                    <label asp-for="ConfirmClave" class="control-label"></label>
                                </div>
                                <input asp-for="ConfirmClave" class="form-control" placeholder="Confirmar Contraseña" />
                                <div class="row col-lg">
                                    <span asp-validation-for="ConfirmClave" class="text-danger"></span>
                                </div>
                            </div>
                            <input asp-for="Estado" type="hidden" value="desactivado">
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <input type="submit" value="Create" class="btn btn-outline-success btn-block" />
                                </div>
                                <div class="form-group col-6">
                                    <input type="reset" value="Limpiar" class="btn btn-warning btn-block">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>



